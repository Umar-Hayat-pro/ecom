<% if notice.present? %>
  <div id="notice-alert" class="fixed top-5 right-5 bg-green-100 border border-green-400 text-green-700 px-6 py-4 rounded-lg shadow-lg flex justify-between items-center w-full max-w-md">
    <span class="font-medium"><%= notice %></span>
    <button onclick="document.getElementById('notice-alert').remove()" class="text-green-600 hover:text-green-800 ml-6">
      <i class="fas fa-times"></i> <!-- Close icon -->
    </button>
  </div>
<% end %>