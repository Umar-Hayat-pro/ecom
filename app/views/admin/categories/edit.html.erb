<div class="max-w-4xl mx-auto bg-white shadow-xl rounded-lg p-4 mt-2">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-5xl font-extrabold text-gray-900">Edit Category</h1>
    <%= link_to admin_categories_path, class: "text-gray-500 hover:text-gray-700 text-sm flex items-center" do %>
      <i class="fas fa-arrow-left mr-2"></i> Back
    <% end %>
  </div>

  <%= render "form", admin_category: @admin_category %>

  <div class="flex justify-end space-x-4 mt-10">
    <%= link_to "Show Category", admin_category_path(@admin_category), class: "py-3 px-6 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-medium transition-all" %>
    <%= link_to "Back to Categories", admin_categories_path, class: "py-3 px-6 rounded-lg bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium transition-all" %>
  </div>
</div>
