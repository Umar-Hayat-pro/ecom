<div class="max-w-3xl mx-auto rounded-lg p-10 mt-10">
  <%= form_with(model: [:admin, admin_category], class: "contents") do |form| %>
    <% if admin_category.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg shadow-md relative mb-8">
        <strong class="font-bold text-lg">
          <%= pluralize(admin_category.errors.count, "error") %> prevented this category from being saved:
        </strong>
        <ul class="list-disc list-inside mt-3 text-sm">
          <% admin_category.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
        <button onclick="this.parentElement.remove()" class="absolute top-3 right-4 text-red-500 hover:text-red-700">
          <i class="fas fa-times text-lg"></i>
        </button>
      </div>
    <% end %>

    <div class="mb-8">
      <%= form.label :name, class: "block text-lg font-medium text-gray-800 mb-2" %>
      <%= form.text_field :name, class: "block w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div class="mb-8">
      <%= form.label :description, class: "block text-lg font-medium text-gray-800 mb-2" %>
      <%= form.text_area :description, rows: 6, class: "block w-full px-5 py-3 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:outline-none" %>
    </div>

    <div class="mt-10 flex justify-end space-x-4">
      <%= form.submit "Save Category", class: "py-3 px-8 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md transition-all cursor-pointer" %>
      <%= link_to "Cancel", admin_categories_path, class: "py-3 px-8 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium rounded-lg shadow-md transition-all" %>
    </div>
  <% end %>
</div>
