<div class="max-w-lg mx-auto p-6 mt-10 bg-white rounded-lg shadow">
  <%= form_with(model: [:admin, admin_category], class: "space-y-6") do |form| %>
    <% if admin_category.errors.any? %>
      <div class="bg-red-100 text-red-700 p-4 rounded">
        <p><%= pluralize(admin_category.errors.count, "error") %> prevented saving:</p>
        <ul class="mt-2">
          <% admin_category.errors.each do |error| %>
            <li>- <%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block font-medium text-gray-700" %>
      <%= form.text_field :name, class: "w-full border rounded p-2 mt-1" %>
    </div>

    <div>
      <%= form.label :description, class: "block font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 3, class: "w-full border rounded p-2 mt-1" %>
    </div>

    <div>
      <%= form.label :image, class: "block font-medium text-gray-700" %>
      <%= form.file_field :image, class: "w-full border rounded p-2 mt-1" %>
    </div>

    <div class="flex justify-end space-x-3">
      <%= form.submit "Save", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <%= link_to "Cancel", admin_categories_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
    </div>
  <% end %>
</div>
